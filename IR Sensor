// Input the sensor you want to calibrate
#define Sensor1 A0 

int IR_sensor1 = 0;

void setup() {
  Serial.begin(9600);
}

void loop() {
  
  IR_sensor1 = infra_ping(Sensor1);

  if(IR_sensor1 == -1)
  {
    Serial.println("IR detected white");     
  }else if (IR_sensor1 == 1) 
  {
    Serial.println("IR detected black");
  }else
  {
    Serial.println("IR function returned 0");
  }
}

int infra_ping(int pin){
  
  int infra_result = -1;
  infra_result = analogRead(pin);
  
  Serial.println(infra_result);

  // finetune following values and copy to your main code per 
  // below is white detected (probably a rock)
  int lower_threshold = 550;
  // above is black detected (probably tape)
  int upper_thereshold = 700;

  if(infra_result <= lower_threshold){

    return(-1);

  }else if(infra_result >= upper_thereshold){
    
    return(1);

  }
  return(0);

}
